script(local) WillowsLab_YourePokemonTrainersNow {
    msgbox(format("Willow: Ohohoho, the looks on your faces are priceless!\lFrom now on, both of you are officially Pokémon Trainers! Congratulations!"))
    msgbox(format("Bradley: You hear that, {PLAYER}? We're legit Pokémon Trainers now! We're going straight to the big leagues!"))
    msgbox(format("Willow: Ahem!\nBefore scampering off with your new Pokémon, there's something I'd like you to do for me in return."))
    msgbox(format("Bradley: Anything, professor!"))
    msgbox(WillowsLab_AmpureMissionDescription)
    msgbox(format("Bradley: Not a problem, Prof. Willow! We'll have your Ampure back before you know it!"), MSGBOX_AUTOCLOSE)
    waitmessage
    applymovement(BRADLEY, mFaceRight)
    applymovement(OBJ_EVENT_ID_PLAYER, mFaceLeft)
    waitmovement(OBJ_EVENT_ID_PLAYER)
    delay(30)
    msgbox(format("Bradley: Let's go, {PLAYER}! We owe the professor, so let's go search for her Ampure!\lCome on, race ya there!"))
    waitmessage
    closemessage
    applymovement(BRADLEY, mBradleyExits)
    applymovement(OBJ_EVENT_ID_PLAYER, mPlayerExits)
    waitmovement(OBJ_EVENT_ID_PLAYER)
    warp(MAP_NEO_BAY, 1, 0, 0)
    releaseall
    end
}


