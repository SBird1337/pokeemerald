//=====================================
// Movement
//=====================================
movement mBradleyEntersFirstTime {
    set_visible
    walk_down * 4
    walk_left * 3
    face_down
}

movement mPlayerEntersFirstTime {
    set_visible
    walk_down * 4
    walk_left * 2
    face_down
}

movement mExclamationPoint {
    emote_exclamation_mark
}

movement mFaceDown {
    face_down
}

movement mFaceUp {
    face_up
}

movement mFaceRight {
    face_right
}

movement mFaceLeft {
    face_left
}

movement mAmpureMakesCrash {
    walk_in_place_fast_left * 4
    slide_right
    walk_fastest_left
}

movement mAmpureRunsAround {
    walk_fast_right
    walk_fast_down
    walk_fastest_right * 9
    walk_fast_up
    walk_fast_down
    walk_fast_up
    walk_fast_down
    walk_fast_up
    walk_fast_down
    walk_fastest_left * 6
    walk_fastest_up
    walk_fastest_left * 3
}

movement mBradleyRushesUp {
    walk_fast_left
    walk_fast_down
}

movement mPlayerWalksDown {
    walk_fast_down
}

movement mAmpureRushesOut {
    emote_exclamation_mark
    walk_up * 2
    walk_left
    face_up
}

movement mAmpureRushesOut2 {
    walk_in_place_fast_up * 8
    walk_fastest_up * 3
    walk_fastest_right * 3
    walk_fastest_up * 4
    set_invisible
}

movement mWillowComesUpToFriends {
    face_left
    emote_exclamation_mark
    walk_down
    walk_right * 4
    face_up
}

movement mWillowGoesToTable {
    walk_down * 3
    walk_right * 2
}

movement mBradleyDeliberates {
    face_right
    delay_16 * 4
    face_down
}

movement mBradleyFidgetsDown {
    walk_in_place_fast_down * 4
}

// Bradley goes to pick a starter
movement mBradleyWalksToVenap {
    walk_down * 2
    walk_right * 2
    walk_down
    walk_right
    face_up
}

movement mBradleyWalksToCelsinge {
    walk_down * 2
    walk_right * 2
    walk_down
    walk_right * 2
    face_up
}

movement mBradleyWalksToEchoise {
    walk_down * 2
    walk_right * 2
    walk_down * 2
    walk_right * 3
    walk_up
}

// Regrouping up left with willow after picking
movement mBradleyRegroupsAfterVenap {
    walk_left
    walk_up * 2
    walk_left * 2
    walk_up
    face_down
}

movement mBradleyRegroupsAfterCelsinge {
    walk_left * 2
    walk_up * 2
    walk_left * 2
    walk_up
    face_down
}

movement mBradleyRegroupsAfterEchoise {
    walk_left * 3
    walk_up * 2
    walk_left * 2
    walk_up
    face_down
}

movement mPlayerRegroupsAfterVenap {
    walk_left
    walk_up * 3
    walk_left
    face_down
}

movement mPlayerRegroupsAfterCelsinge {
    walk_left * 2
    walk_up * 3
    walk_left
    face_down
}

movement mPlayerRegroupsAfterEchoise {
    walk_left * 3
    walk_up * 3
    walk_left
    face_down
}

movement mWillowRegroupsAfterStarter {
    walk_left * 2
    walk_up * 2
    walk_left * 2
    walk_up
}

movement mWalkDown {
    walk_down
}

movement mBradleyExits {
    walk_up
    walk_right * 4
    walk_up * 4
    set_invisible
}

movement mPlayerExits {
    walk_left
    walk_up
    walk_right * 4
    walk_up * 4
    set_invisible
}

