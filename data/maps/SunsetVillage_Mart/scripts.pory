script(global) SunsetVillage_Mart_Clerk {
    lock
    faceplayer
    message(gText_HowMayIServeYou)
    waitmessage
    pokemart(SunsetVillage_Mart_Data)
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release
    end
}

